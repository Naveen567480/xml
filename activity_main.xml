<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ck"
    >
    <RelativeLayout
        android:id="@+id/ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="List of faculties in Mandavi"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:background="@color/purple_700"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </RelativeLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_below="@+id/ten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="3"
        >

    <androidx.cardview.widget.CardView
        android:id="@+id/computerengineering"
        android:layout_height="180dp"
        android:layout_width="wrap_content"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        android:layout_margin="12dp"
        app:cardCornerRadius="25dp"

        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/com"
                android:layout_gravity="center"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comuter engineering"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/commerce"
            android:layout_height="180dp"
            android:layout_width="wrap_content"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="25dp"

            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/commer"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commerce (Management)"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/edu"
            android:layout_height="180dp"
            android:layout_width="wrap_content"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="25dp"

            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/educ"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education faculty"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</androidx.gridlayout.widget.GridLayout>
</RelativeLayout>